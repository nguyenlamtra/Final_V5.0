@using COmpStore.Models.ViewModels.Customer
@model CustomerCreate
<div class="signup-form">
    <!--sign up form-->
    <h2>New User Signup!</h2>
    <form asp-controller="Customer" asp-action="Register" method="post">
        <input asp-for="FullName" placeholder="Name" />
        <input asp-for="EmailAddress" placeholder="Email Address" />
        <input asp-for="Password" type="password" placeholder="Password" />
        <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password" />
        <button type="submit" class="btn btn-default">Signup</button>
    </form>
</div><!--/sign up form-->