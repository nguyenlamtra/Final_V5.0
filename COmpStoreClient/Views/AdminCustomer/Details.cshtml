@using COmpStore.Models.ViewModels.Customer
@model CustomerAdminDetails
@{
    ViewData["Title"] = "Chi tiết";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Customer - Chi tiết</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="col-md-6">
            <div class="form-group">
                <label>Mã: </label><span> @Model.Id</span>
            </div>
            <div class="form-group">
                <label>Họ và tên: </label><span> @Model.FullName</span>
            </div>
            <div class="form-group">
                <label>Email: </label><span> @Model.EmailAddress</span>
            </div>
         
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Quyền: </label><span> @Model.Role</span>
            </div>
            <div class="form-group">
                <label>Số đơn hàng: </label><span> @Model.Orders.Count()</span>
            </div>
        </div>

    </div>
    <!-- /.col-lg-12 -->
    <div class="col-md-12">
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ngày đặt</th>
                            <th>Tổng tiền</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.Orders)
                        {
                            <tr data-id="@order.Id">
                                <td>@order.Id</td>
                                <td>@order.OrderDate</td>
                                <td>@order.OrderTotal</td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-controller="AdminOrder" asp-route-id="@order.Id" class="text-primary" title="Chi tiết">
                                        <span class="glyphicon glyphicon-info-sign"></span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.row -->
